:global{
	#footer {
		position: fixed;
		bottom: 0;
		left: 0;
		height: 100px;
		width: 100%;
		border-top: 1px solid #ccc;
		background-color: #fff;
		.text {
				font-size: 24px;
				margin-top: 2px;
				color: #d0d0d0;
		}
		.icon_home_gray {
				width: 51px;
				height: 48px;
				background: url('~images/home.svg') no-repeat center center;
				background-size: 40px;
		}
		.icon_form_gray {
				width: 37px;
				height: 46px;
				background: url('~images/upstage.svg') no-repeat center center;
				background-size: 42px;
		}
		.icon_my_gray {
				width: 44px;
				height: 44px;
				background: url('~images/people.svg') no-repeat center center;
				background-size: 42px;
		}
		.item.active {
				.text {
						color: #18A2FA;
				}
				.icon_home_gray {
						width: 51px;
						height: 48px;
						background: url('~images/home_fill.svg') no-repeat center center;
						background-size: 42px;
				}
				.icon_form_gray {
						width: 37px;
						height: 46px;
						background: url('~images/upstage_fill.svg') no-repeat center center;
						background-size: 42px;
				}
				.icon_my_gray {
						width: 44px;
						height: 44px;
						background: url('~images/people_fill.svg') no-repeat center center;
						background-size: 40px;
				}
		}
}
}
