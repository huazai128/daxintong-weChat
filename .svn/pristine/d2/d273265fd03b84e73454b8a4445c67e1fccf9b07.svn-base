.suc-detail{
	background: #fff;
	padding: 30px 20px;
	border-top: 1px solid #ddd;
	border-bottom: 1px solid #ddd;
	.suc-img{
		width: 190px;
		height: 140px;
		overflow: hidden;
		margin-right: 20px;
		> img{
			width: 100%;
			height: 100%;
		}
	}
	h4{
		margin: 0;
		margin-top: 34px;
		margin-bottom: 15px;
		font-size: 30px;
		color: #333;
		font-weight: normal;
	}
	p{
		font-size: 28px;
		color: #999;
		overflow: hidden;
		text-overflow: ellipsis;
		white-space: nowrap;
	}
}

.quan-items{
	background: #fff;
	padding-bottom: 40px;
	.item{
		text-align: center;
		padding: 40px 0;
		border-bottom: 1px solid #ddd;
		&:last-child{
			border: 0;
		}
		> h4{
			margin: 0;
			font-size: 30px;
			color: #999;
			padding-bottom: 20px;
		}
		> div{
			width: 250px;
			height: 250px;
			margin: 0 auto;
		}
		> p{
			font-size: 28px;
			margin: 0;
			margin-top: 40px;
			color: #999;
			> button{
				background: transparent;
				border: 0;
				outline: none;
			}
			span {
				font-size: 30px;
				color: #4794fe;
			}
		}
	}
}



