:global{
	.com-items{
		font-size: 24px;
		.border-1{
			border-top: 1px solid #d5d5d5;
			padding: 30px 0;
		}
		h4{
			margin: 0;
			font-size: 26px;
			color: #333;
			font-weight: normal;
			margin-bottom: 10px;
		}
		div{
			font-size: 24px;
			color: #666;
			line-height: 1.7;
			word-break: break-word ;
			white-space: pre-line ;
			-webkit-white-space: pre-line;
			-webkit-word-break: break-word;
		}
		.avatar{
			width: 100px;
			height: 100px;
			overflow: hidden;
			border-radius: 50%;
			float: left;
			> img{
				width: 100%;
				height: 100%;
				overflow: hidden;
				border-radius: 50%;
			}
		}
		.com-item-box{
			overflow: hidden;
		}
		.img-box{
			width: 480px;
			> img{
				width: 100px;
				height: 100px;
				overflow: hidden;
				margin-right: 15px;
			}
		}
		.com-data{
			margin-left: 120px;
		}
		.com-width{
			font-size: 24px;
			color: #666;
			line-height: 1.7;
			width: 100%;
			word-break: break-word ;
			white-space: pre-line ;
			-webkit-white-space: pre-line;
			-webkit-word-break: break-word;
			display: block;
		}
		.pswiper-box{
			width: 470px;
			position: relative;
			.psweiper-num{
				position: absolute;
				bottom: 15px;
				right: 15px;
				width: 42px;
				height: 30px;
				text-align: center;
				line-height: 30px;
				z-index: 10;
				background: rgba(0,0,0,0.5);
				border-radius: 10px;
				color: #fff;
				font-size: 24px;
			}
			img{
				width: 110px;
				height: 110px;
			}
		}
	}

}
