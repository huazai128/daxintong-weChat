.head{
	border-bottom: 1px solid #ddd;
	padding: 22px 20px;
	p{
		font-size: 30px;
		color: #333;
		margin: 0;
		&.ju{
			font-size: 22px;
			color: #666;
		}
	}
	p.margr{
		margin-right: 20px !important;
	}
}
.shop{
	background: #fff;
	border-bottom: 1px solid #ddd;
}
.content{
	padding: 0 20px;
	border-bottom: 1px solid #ddd;
	.items{
		padding: 20px 0;
		border-bottom: 1px solid #ddd;
		.img{
			width: 160px;
			height: 110px;
			overflow: hidden;
			& > img{
				width: 100%;
				height: 100%;
				overflow: hidden;
			}
		}
		.itemTitle{
			margin-bottom: 62px;
			font-size: 30px;
			color: #333;
		}
		.price{
			display: inline-block;
			padding-right: 20px;
			font-size: 30px;
			color: #18a3f9;
		}
		.originPrice,.amount{
			font-size: 24px;
			color: #666;
		}
	}
}
.more{
	height: 90px;
	color: #18a3f9;
	font-size: 30px;
}
:global{
	.am-list-view-scrollview{
		height: 100%;
	}
	.keyword{
		background: #f5f5f9;
		font-size: 28px;
		padding: 14px 20px;
		color: #666;
	}
}

