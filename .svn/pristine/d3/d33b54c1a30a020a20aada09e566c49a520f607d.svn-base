}

	.message{
		overflow: hidden;
	}
	.pay-btn{
		padding: 0 20px;
		margin-top: 100px;
		height: 92px;
		text-align: center;
		margin-bottom: 20px;
		p{
			width: 100%;
			height: 92px;
			background-color: #e5e5e5;
			color: #333333;
			text-align: center;
			line-height: 88px;
			border-radius: 10px;
			font-size: 30px;
			&.show-btn{
				background-color: #4794fe;
				color: #ffffff;
			}
		}
	};
	.order-sty{
		max-height: 70px;
		overflow: hidden;
	}
.shop-name{
	overflow: hidden;
	h4{
		float: left;
		overflow: hidden;
		text-overflow: ellipsis;
		white-space: nowrap;
		width: 360px;
	}
	p{
		float: right;
	}
}

:global{
	.order-box{
		font-size: 28px;
		.am-list-item.am-input-item{
			padding-right: 20px;
			margin: 0 20px;
			height: 92px;
		}
		.am-list-item .am-input-label.am-input-label-5{
			width: auto ;
		}
		.am-list-item.am-input-item{
			padding-left: 20px !important;
			background: #fff;
		}
		.am-list-item{
			background: #f5f5f9 ;
		}
		.sends{
			background-color: #ff9f00;
			color: #fff;
		}
		.am-list-item .am-input-control input{
			font-size: 28px !important;
		}
	}
	.order-bg{
		background: #fff;
		.am-list-item{
			background: #fff !important;
		}
	}
	.order-radio{
		position: relative;
		width: 40px;
		height: 40px;
		border: 1px solid #ddd;
		background: #e5e5e5;
		border-radius: 50%;
		top: 50%;
		margin-top: -10px;
		&.active{
			background: #ff9900;
			border: 1px solid #ff9900;
		}
	}
	.order-router{
		padding: 0 20px;
		font-size: 28px;
		color: #666;
		& > p{
			margin-right: 20px;
			line-height: 60px;
			font-size: 24px;
		}
		& > div{
			margin-right: 20px;
			width: 130px;
			height: 60px;
			border-radius: 5px;
			border: 1px  solid #4794fe;
			color: #4794fe;
			line-height: 60px;
			text-align: center;
			&:last-child{
				margin-right: 0;
			}
		}
	}
}


