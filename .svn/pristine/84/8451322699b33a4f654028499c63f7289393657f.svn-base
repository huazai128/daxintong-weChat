@import '_variable';
@import '_utils';

:global{
	body,html {
		height: 100%;
		overflow: hidden;
	}
	body {
		font-size: 0.32rem !important;
	}
	#root {
		height: 100%;
		overflow-y: auto;
	}
	p {
		margin: 0;
	}
	.homeContent{
		position: relative;
		overflow: hidden;
		>div{
			position: absolute;
			top:0;
			bottom:0;
			left:0;
			right: 0;
		}
	}
	.scroll-absolute {
    position: relative;
		overflow: hidden;
		height: 100%;
    >div {
			-webkit-overflow-scrolling: touch;
			position: absolute;
			width: 100%;
			height: 100%;
			overflow-y: auto;
    }
	}
}


