:global{
	.icon{
		width: 42px;
		height: 42px;
		margin-left: 25px;
		&.icon-show{
			background: url("~images/star-empty.svg") no-repeat center;
			background-size: 40px;
		}
		&.icon-home{
			background: url("~images/home01.svg") no-repeat center;
			background-size: 36px;
		}
	}
}
.bux-img{
	background: #fff;
	width: 100%;
	height: 360px;
	overflow: hidden;
	border-bottom: 1px solid #ddd;
	 img{
		width: 100%;
		height: 360px !important;
	}
}
.bus-info{
	position: relative;
	background: #fff;
	padding: 20px 0 20px 20px;
	overflow: hidden;
	padding-bottom: 20px;
	&:before{
		position: absolute;
		bottom: 0;
		left: 15px;
		width: 100%;
		height: 1px ;
		background: #efefef;
		content: "";
	}
	h4{
		margin: 0;
		margin-bottom: 15px;
		font-size: 30px;
		font-weight: normal;
	}
}
.bus-show{
	width: 160px;
	height: 90px;
	background: url("images/share.svg") no-repeat right center;
	background-size: 48px 44px;
	margin-right: 20px;
}
.bus-pos{
	background: #fff;
	padding: 25px 20px;
	overflow: hidden;
	.bus-address{
		font-size: 26px;
		color: #333;
		padding-left: 50px;
		background: url("images/position.svg") no-repeat 8px center;
		background-size: 28px 34px;
		line-height: 1.7;
	}
	.bus-iphone{
		border-left: 1px solid #efefef;
		background: url("images/phone-blue.svg") no-repeat right center;
		background-size: 40px;
		> a {
			display: block;
			height: 100%;
		}
	}
}

.bus-box{
	background: #fff;
	padding: 20px 0 0 20px;
	.bus-head{
		padding-right: 20px;
		h4{
			margin: 0;
			font-size: 30px;
			padding-left: 45px;
			font-weight: 500;
			background: url('images/buy.png') no-repeat left center;
			background-size: 30px 26px;
			margin-bottom: 5px;
		}
		.tuan-lists{
			border-bottom: 1px solid #e4e4e4;
			padding: 20px 0 20px 20px;
			&:last-child{
				border-bottom:0;
			}
			p{
				font-size: 24px;
				color: #999;
				line-height: 1.7;
			}

			h5{
				font-size: 28px;
				margin: 0;
				font-weight: normal;
				overflow: hidden;
				text-overflow: ellipsis;
				white-space: nowrap;
			}
			.num{
				font-size: 22px;
				color: #999;
				text-align:center;
			}
			.price{
				font-size: 24px;
				line-height: 1.8;
				font-size: 28px;
				color: #31abfb;
				padding-right: 10px;
			}
			.real{
				line-height: 50px;
			}
			.img{
				width: 160px;
				height: 130px;
				overflow: hidden;
				margin-right: 20px;
				> img{
					width: 100%;
					height: 100%;
				}
			}
		}
		.num{
			min-width: 125px;
			height: 112px;
			padding-right: 10px;
			line-height: 112px;
			background: url('images/arrow_down.svg') no-repeat 117px center;
			background-size: 20px 28px;
		}
	}
}
.no-comments{
	text-align: center;
	line-height: 80px;
	border-top: 1px solid #ddd;
	font-size: 28px;
	color: #666;
	background: #fff;

}
.bus-comment{
	padding-right: 20px;
	> h4{
			margin: 0;
		> div{
			display: block;
			font-size: 30px;
			font-weight: normal;
			line-height: 64px;
			background: url('images/arrow_down.svg') no-repeat right center;
			background-size: 22px  30px;
		}
		span{
			font-size: 24px;
			color: #666;
		}
	}
}

.bus-btn{
	height: 80px;
	line-height: 80px;
	position: relative;
	overflow: hidden;
	padding-right: 20px;
	&::before{
		position: absolute;
		top: 0;
		left: 0;
		content:"";
		width: 100%;
		height: 1px;
		background: #e4e4e4;
	}
	> div{
		padding-right: 30px;
		font-size: 24px;
		color: #999;
		background: url('images/arrow_down.svg') no-repeat right center;
		background-size: 22px  30px;
	}
	> p{
		font-size: 30px;
		color: #333;
	}
}
.bus-tuan{
	> div {
		border-bottom: 1px solid #ddd;
	}
}


:global{
	.swiper-container{
		.am-carousel,.slider-frame,.slider-list{
			height: 400px !important;
			a ,img{
				height: 100%;
				width: 100%;
			}
			a{
				display: block;
			}
		}
	}
	.bus-more{
		height: 90px;
		font-size: 28px;
		color: #ff9900;
	}
	.bus-height{
		height: 130px !important;
	}
	.yin-box{
		position: fixed;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		z-index: 99999;
		> div {
			position: absolute;
			width: 100%;
			height: 100%;
			&::before{
				position: absolute;
				width: 228px;
				height: 177px;
				top: 0px;
				right: 60px;
				content: "";
				background-image: url('~images/show-bg.png');
				background-position: top right;
				background-size: 228px 177px;
				background-repeat: no-repeat;
			}
		}
	}
	.am-popover{
		top: 0 !important;
		left: 0 !important;
		right: 0 !important;
		bottom: 0 !important;
	}
	.am-popover-arrow{
		width:  0 !important;
		height: 0 !important;
		background-color: transparent !important;
	}

	.nv-box{
		width:100%;
		height: 80px;
		background: #3799F7;
		position: relative;
		> p{
			line-height: 80px;
			color: #fff;
			font-size: 32px;
			text-align: center;
		}
		> .post-com{
			position: absolute;
			left: 0;
			top: 0;
			width: 25%;
			height:80px;
			z-index: 1;
			&.post-right{
				right: 0;
				left: auto;
			}
			&.go-icon{
				display: inline-block;
				background-repeat: no-repeat;
				background-position: 25px center;
				background-size: 0.21rem 0.36rem;
				background-image: url(http://localhost:8080/img/icon-back.4390f.png);
			}
		}
	}
}


