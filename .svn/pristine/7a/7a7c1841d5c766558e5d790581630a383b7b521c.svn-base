
.rom-box{
	padding: 20px 5px 20px 20px;
	background: #fff;
	h4{
		margin: 0 ;
		margin-right: 15px;
		padding-bottom: 15px;
		border-bottom: 1px solid #ddd;
		font-size: 28px;
		color: #999;
	}
	.rom-item{
		margin-top: 20px;
		padding-right: 15px;
		position: relative;
		.rom-img{
			width: 100%;
			height: 260px;
			> img{
				width: 100%;
				height: 100%;
			}
		}
		.rom-info{
			position: absolute;
			height: 90px;
			bottom: 0;
			left:0;
			right: 15px;
			background: rgba(0,0,0,0.5);
			> h5{
				font-size: 30px;
				padding-top: 8px;
				color: #fff;
				margin: 0;
				padding: 8px 15px 0;
				overflow: hidden;
				text-overflow: ellipsis;
				white-space: nowrap;
				font-weight: normal;
			}
			> p{
				color: #f7962f;
				font-size: 28px;
				line-height: 1.7;
				overflow: hidden;
				text-overflow: ellipsis;
				white-space: nowrap;
				padding: 0 15px;
				> span{
					padding: 10px 0;
					color: #fff;
					text-decoration:line-through;
				}
			}
		}
	}
}
:global{
	.cate-share{
		width: 100%;
		height: 80px;
		position: relative;
		&::before{
			position: absolute;
			top: 0;
			left: 0;
			right: 20px;
			bottom: 0;
			content: '';
			background: url('~images/share01.svg') no-repeat right center;
			background-size: 45px ;
		}
		&.active:before{
			background: url('~images/share-yes.svg') no-repeat right center;
			background-size: 45px ;
		}
	}
}
