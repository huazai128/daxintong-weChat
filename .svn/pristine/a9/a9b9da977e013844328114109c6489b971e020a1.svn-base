.re-info{
	padding: 20px;
	border-top: 1px solid #ddd;
	background: #fff;
	.re-img{
		width: 190px;
		height: 150px;
		overflow: hidden;
		margin-right: 20px;
		> img{
			width: 100%;
			height: 100%;
		}
	}
	h4{
		margin: 0;
		padding-top: 15px;
		font-size: 30px;
		font-weight: normal;
		margin-bottom: 20px;
		height: 68px;
		overflow: hidden;
		overflow : hidden;
		text-overflow: ellipsis;
		display: -webkit-box;
		-webkit-line-clamp: 2;
		-webkit-box-orient: vertical;
	}
	p{
		font-size: 24px;
		color: #999;
		padding-right: 40px;
		> span {
			color: rgb(191,25,29);
		}
	}
}

.re-detail{
	height: 90px;
	line-height: 90px;
	padding: 0 20px;
	background: #fff;
	.re-price{
		font-size: 30px;
		color: #333;
		background: url("images/question.svg") no-repeat right center;
		background-size: 32px;
		padding-right: 50px;
	}
	.re-head{
		border-bottom: 1px solid #ddd;
	}

}
.re-items{
	background: #fff;
	.re-item{
		padding: 20px;
		border-bottom: 1px solid #ddd;
		p{
			font-size: 28px;
			color: #999;
			line-height: 1.7;
		}
	}
}

:global{
	.radio-box{
		font-size: 30px;
		color: #333;
		.icon{
			width: 40px;
			height: 40px;
			border: 2px solid #666;
			background: #e5e5e5;
			border-radius: 50%;
			&.selected{
				border: 2px solid #ff9f00;
				background-color: #ff9f00;
				background-image: url("~images/selected.svg");
				background-repeat: no-repeat;
				background-position: center;
				background-size: 32px 28px;
			}
		}
		.refund-text{
			.am-textarea-control textarea{
				font-size: 28px !important;
			}
		}
	}
	.radio-btn{
		font-size: 30px;
		color: #333;
		height: 90px;
		line-height: 90px;
		padding: 0 20px;
		border-bottom: 1px solid #ddd;
		.icon{
			width: 40px;
			height: 40px;
			margin-top: 25px;
			border: 2px solid #666;
			background: #e5e5e5;
			border-radius: 50%;
			&.selected{
				border: 2px solid #ff9f00;
				background-color: #ff9f00;
				background-image: url("~images/selected.svg");
				background-repeat: no-repeat;
				background-position: center;
				background-size: 32px 28px;
			}
		}
		.radio-name{
			font-size: 28px;
			color: #999;
		}
	}
}

.tui-box{
	background: #fff;
	h4{
		padding: 20px;
		border-bottom: 1px solid #ddd;
		font-size: 28px;
		font-weight: normal;
		color: #999;
		margin: 0;
	}
	.tui-item{
		padding: 20px;
		p{
			font-size: 28px;
			color: #999;
			> span{
				color: rgb(8,89,9)
			}
		}
	}
}
.re-reason{
	background: #fff;
	h4{
		padding: 20px;
		border-bottom: 2px solid #ddd;
		font-size: 28px;
		font-weight: normal;
		color: #999;
		margin: 0;
	}
}

.re-text{
	font-size: 24px;
}
.re-btn{
	padding: 0 60px;
	margin: 40px 0 40px 0;
	> div{
		width: 100%;
		background: #4794fe;
		line-height: 90px;
		height: 90px;
		text-align: center;
		color: #fff;
		font-size: 30px;
		z-index: 10;
		outline: none;
		border: 0;
		border-radius: 12px;
	}

}

