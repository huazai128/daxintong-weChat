.myc-items{
	overflow: hidden;
	border-top: 1px solid #ddd;
	height: 100%;
	.item{
		padding: 30px 20px;
		margin-bottom: 20px;
		background: #fff;
	}
	.avatar{
		width: 100px;
		height:100px;
		border-radius: 50%;
		background: #e5e5e5;
		> img{
			width: 100px;
			height:100px;
			border-radius: 50%;
		}
	}
	.myc-content{
		padding-left: 20px;
		> h4{
			margin: 0;
			margin-bottom: 8px;
			font-size: 28px;
			color: #333;
		}
		.myc-com{
			font-size: 24px !important;
			color: #666;
			line-height: 1.7;
			white-space: pre-line;
			word-break: break-word;
		}
		span{
			font-size: 24px !important;
			padding-right: 15px;
			color: #999;
			line-height: 1.7;
		}
	}
}
.myc-detail{
	border-top: 1px solid #ddd;
	padding-top: 30px;
	> .myc-img{
		width: 160px;
		height: 130px;
		overflow: hidden;
		margin-right: 20px;
		> img{
			width: 100%;
			height: 100%;
		}
	}
	> h4{
		margin: 0;
		font-size: 30px;
		color: #333;
	}
	p{
		margin-top: 5px;
		overflow : hidden;
		text-overflow: ellipsis;
		display: -webkit-box;
		-webkit-line-clamp: 2;
		-webkit-box-orient: vertical;
		line-height: 1.4;
		font-size: 28px;
		height: 78px;
		color: #333;
		margin-bottom: 5px;
	}
	span{
		font-size: 24px !important;
	}
}

.pswiper-box{
	width: 470px;
	position: relative;
	.psweiper-num{
		position: absolute;
		bottom: 15px;
		right: 15px;
		width: 42px;
		height: 30px;
		text-align: center;
		line-height: 30px;
		z-index: 10;
		background: rgba(0,0,0,0.5);
		border-radius: 10px;
		color: #fff;
		font-size: 24px;
	}
	img{
		width: 110px;
		height: 110px;
	}
}
.create-time{
	font-size: 24px;
	color: #666;
}
:global{
	.myc-box{
		.am-list-view-scrollview{
			height: 100%;
		}
		.am-list-view-scrollview-content{
			width: 100%;
		}
	}

}
